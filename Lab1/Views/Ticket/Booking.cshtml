@model Lab1.Models.Ticket

<h2>Бронювання квитка</h2>

<form asp-action="Booking" method="post">
    <div class="form-group">
        <label asp-for="PassengerName">Ім'я пасажира</label>
        <input asp-for="PassengerName" class="form-control" />
        <span asp-validation-for="PassengerName" class="text-danger"></span>
    </div>
   
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Забронювати</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Повернутися на головну</a>
    </div>

   
    @if (!string.IsNullOrEmpty(ViewData["SuccessMessage"] as string))
    {
        <div class="mt-3 alert alert-success">@ViewData["SuccessMessage"]</div>
    }

</form>